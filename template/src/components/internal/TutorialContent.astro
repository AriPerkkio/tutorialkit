---
import type { Lesson } from '@entities/tutorial';
import '@styles/markdown.css';
import ContentNavCard from './ContentNavCard.astro';

interface Props {
  lesson: Lesson;
}

const { lesson } = Astro.props;
const { Markdown, prev, next } = lesson;
---

<div class="h-full overflow-auto scrollbar-transparent p-8">
  <div class="markdown-content">
    <Markdown />
  </div>
  <div class="grid grid-cols-[1fr_1fr] gap-4 mt-8">
    <div class="flex">
      {prev && <ContentNavCard lesson={prev} type="prev" />}
    </div>
    <div class="flex">
      {next && <ContentNavCard lesson={next} type="next" />}
    </div>
  </div>
</div>
