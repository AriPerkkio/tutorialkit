{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "jsxImportSource": "react",
    "paths": {
      "@components/*": ["src/components/*"],
      "@mdx/*": ["src/mdx/*"],
      "@layouts/*": ["src/layouts/*"],
      "@schemas": ["src/schemas"],
      "@stores/*": ["src/stores/*"],
      "@entities": ["src/entities"],
      "@entities/*": ["src/entities/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "exclude": ["dist"]
}
